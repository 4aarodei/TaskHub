@model List<TaskModel>
@{
    ViewData["Title"] = "Completed Tasks";
}

<section class="container py-5">
    <div class="row justify-content-center mb-4">
        <div class="col-lg-8 text-center">
            <h1 class="display-6 fw-bold text-success">
                <i class="bi bi-check-circle-fill me-2"></i> Completed Tasks
            </h1>
            <p class="text-muted">Here are all the tasks you have successfully completed.</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var task in Model)
                            {
                                <li class="list-group-item d-flex justify-content-between flex-column flex-md-row align-items-start align-items-md-center gap-2">
                                    <div>
                                        <strong>@task.Title</strong><br />
                                        <small class="text-muted">@task.Description</small>
                                    </div>
                                    <form asp-action="Details" asp-controller="Task" method="get" class="d-inline">
                                        <input type="hidden" name="taskId" value="@task.ID" />
                                        <button type="submit" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-info-circle"></i> Деталі
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-inbox fs-2"></i>
                            <p class="mt-2">No completed tasks yet.</p>
                        </div>
                    }
                </div>
                <div class="card-footer bg-light border-top-0 text-end">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
