@model TaskHub.Models.TaskModel

@{
    ViewData["Title"] = "Create Task";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create New Task for Team: @Model.Team.Name</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Task Title -->
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Task Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Task Description -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Task Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Deadline -->
                        <div class="mb-3">
                            <label asp-for="Deadline" class="form-label">Deadline</label>
                            <input asp-for="Deadline" type="datetime-local" class="form-control" />
                            <span asp-validation-for="Deadline" class="text-danger"></span>
                        </div>

                        <!-- Created Date -->
                        <div class="mb-3">
                            <label asp-for="CreatedDate" class="form-label">Created Date</label>
                            <input asp-for="CreatedDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>
                        </div>

                        <!-- User Assignment -->
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label">Assign to User</label>
                            <select asp-for="UserId" class="form-select">
                                <option value="">-- None --</option>
                                @foreach (var user in ViewBag.UsersOnTeam)
                                {
                                    <option value="@user.Id">@user.UserName</option>
                                }
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <!-- Team Assignment -->
                        <div class="mb-3">
                            <label asp-for="TeamId" class="form-label">Assign to Team</label>
                            <input asp-for="TeamId" type="hidden" value="@Model.TeamId" />
                            <span class="form-control">@Model.Team.Name</span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="PreIndex" class="btn btn-outline-secondary">← Back to List</a>
                            <button type="submit" class="btn btn-success">✅ Create Task</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>